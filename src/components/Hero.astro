---
const personalImageAlt = "Miguel Lugo Moreno"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16 aspect-square object-cover"
      src="https://firebasestorage.googleapis.com/v0/b/my-portfolio-6f48f.firebasestorage.app/o/assets%2Fimages%2Fme.jpeg?alt=media&token=7a36ca0a-2156-442c-80ab-42ca14bfb599"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/miguellugodev"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>iOS Developer</Badge>
      &nbsp;
      <Badge>Android Developer</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Miguel
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-blue-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +4 años de experiencia. <strong
      >Desarrollador de Software</strong
    > especializado en el desarrollo de <strong>Aplicaciones Móviles</strong>.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:miguellugodev@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/miguellugodev">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
