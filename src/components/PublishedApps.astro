---
import AppStore from "./icons/AppStore.astro"
import GooglePlay from "./icons/GooglePlay.astro"
import LinkButton from "./LinkButton.astro"

const APPS = [
  {
    title: "CarLog: Gas & Mileage Log",
    description: "¡Toma el control de tu auto! Registra gasolina, mantenimientos y gastos. Calcula el rendimiento de combustible, visualiza gráficas de costos y mantén tu vehículo al día.",
    image: "https://firebasestorage.googleapis.com/v0/b/my-portfolio-6f48f.firebasestorage.app/o/assets%2Fprojects%2Fcuentosyfabulas.png?alt=media&token=5e7ce892-6dec-4327-8be8-fd0b2238ff0a", // Using the same image as in Projects for now, ideally should be an icon
    linkAndroid: undefined,
    linkIOS: "https://apps.apple.com/us/app/carlog-gas-mileage-log/id6755377723"
  },
  {
    title: "Digital Board Game Scorekeeper",
    description: "¡La forma más fácil de llevar el marcador! Olvídate del lápiz y papel. Anota puntos, guarda tu historial y define ganadores. Simple, rápido y gratis.",
    image: "https://firebasestorage.googleapis.com/v0/b/my-portfolio-6f48f.firebasestorage.app/o/assets%2Fprojects%2Fcuentosyfabulas.png?alt=media&token=5e7ce892-6dec-4327-8be8-fd0b2238ff0a", // Using the same image as in Projects for now, ideally should be an icon
    linkAndroid: undefined,
    linkIOS: "https://apps.apple.com/us/app/digital-board-game-scorekeeper/id6755271275"
  },
  {
    title: "Cuentos y Fábulas 4 Kids!",
    description: "Una colección mágica de cuentos clásicos y fábulas para niños. Fomenta la lectura y la imaginación con historias ilustradas.",
    image: "https://firebasestorage.googleapis.com/v0/b/my-portfolio-6f48f.firebasestorage.app/o/assets%2Fprojects%2Fcuentosyfabulas.png?alt=media&token=5e7ce892-6dec-4327-8be8-fd0b2238ff0a", // Using the same image as in Projects for now, ideally should be an icon
    linkAndroid: "https://play.google.com/store/apps/details?id=com.miguellugo.cuentosyfabulas",
    linkIOS: undefined
  }
]
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  {
    APPS.map(({ image, title, description, linkAndroid, linkIOS }) => (
      <article class="relative flex flex-col items-center justify-center p-6 bg-white dark:bg-gray-800/50 rounded-xl shadow-lg transition hover:shadow-2xl border border-gray-200 dark:border-gray-700">
        <div class="relative w-24 h-24 mb-4 overflow-hidden rounded-xl shadow-md">
            <img src={image} alt={title} class="object-cover w-full h-full" />
        </div>
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2 text-center">{title}</h3>
        <p class="text-gray-600 dark:text-gray-300 text-center mb-6 text-pretty">{description}</p>
        <div class="flex gap-4 flex-wrap justify-center">
          {linkAndroid && (
            <LinkButton href={linkAndroid}>
              <GooglePlay class="size-6" />
              Google Play
            </LinkButton>
          )}
          {linkIOS && (
            <LinkButton href={linkIOS}>
              <AppStore class="size-6" />
              App Store
            </LinkButton>
          )}
        </div>
      </article>
    ))
  }
</div>
